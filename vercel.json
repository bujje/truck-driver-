{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/truck_driver_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "/backend/truck_driver_project/wsgi.py" },
    { "src": "^/$", "status": 308, "headers": { "Location": "/planner" } },
    { "src": "/static/(.*)", "dest": "/frontend/build/static/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ]
}
