{
  "version": 2,
  "installCommand": "npm ci --prefix frontend",
  "buildCommand": "CI=false npm --prefix frontend run build",
  "outputDirectory": "frontend/build",
  
  "routes": [
    { "src": "^/api$", "dest": "/api/index.py" },
    { "src": "^/api/(.*)$", "dest": "/api/index.py/api/$1" }
  ],
  "rewrites": [
    { "source": "/manifest.json", "destination": "/manifest.json" },
    { "source": "/static/:path*", "destination": "/static/:path*" },
    { "source": "/:path*", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/", "destination": "/planner", "permanent": false }
  ]
}


